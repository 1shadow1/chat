OPENAI_API_KEY=
ALLOWED_ORIGINS=*

# 语音克隆服务配置（可选）
# 如使用你提供的接口，设置为 http://127.0.0.1:8014
VOICE_CLONE_BASE_URL=
# 若服务需要鉴权，填入密钥；不需要则留空
VOICE_CLONE_API_KEY=
# 设为 1 使用内置语音模拟流（无需真实服务）
VOICE_USE_MOCK=0

# 日志配置（可选）
# 设为 1 开启文件持久化；默认仅输出到控制台
LOG_TO_FILE=1
# 文件路径（默认优先 /srv/chat/log/chat.log，其次 /srv/chat/logs/chat.log）
LOG_FILE_PATH=/srv/chat/log/chat.log
# 日志等级：DEBUG/INFO/WARNING/ERROR/CRITICAL（默认 INFO）
LOG_LEVEL=INFO
LOG_INCLUDE_INPUT=0
LOG_INCLUDE_OUTPUT=none
LOG_CONTENT_MAX_CHARS=1000
LOG_REDACT_ENABLED=1